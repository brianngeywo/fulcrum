<p id="notice"><%= notice %></p>
      <%= image_tag @property.property_cover_photo, class:"w-full h-40 object-cover object-center" if @property.property_cover_photo.present? %>
<div class="flex">
    <div class="w-full">
        <div class="px-24 my-4">
        <div class="text-teal-700 text-3xl font-bold"><%= @property.name %></div>
        <div class="text-gray-700 capitalize font-semibold">
            <% if @property.for_sale? %>
                <div>for sale </div>
            <% else %>
                <div>for rent </div>
            <% end %>
        </div>       
        </div>
        <div class=" flex ml-24 py-4  border-t-2">
            <div class="flex-grow py-3 text-md capitalize">
                <% if @property.for_sale? %>
                    <div clas="text-gray-700 capitalize font-semibold">call <%= @property.user.country_code %> <%= @property.user.phone_number %> </div>
                <% else %>
                    <%= @property.price > 0 ? number_to_currency(@property.price, unit: "kshs", precision: 0) : "for sale" %>/month
                <% end %>
                <div class="text-gray-700"><%= @property.address %></div>
                
            </div>
            <div class="bg-gray-300 flex space-x-4 p-3 capitalize rounded-lg">
                <div class="grid justify-items-center">
                    <div>bedrooms</div>
                    <div> <%= @property.bedrooms %> </div>
                </div>
                <div class="grid justify-items-center">
                    <div>bathrooms</div>
                    <div> <%= @property.bathrooms %> </div>
                </div>
                <div class="grid justify-items-center"v>
                    <div>parking</div>
                    <div> <%= @property.parking_space %> </div>
                </div>
            </div>            
        </div>
        <div class="ml-24 py-4 border-t-2">
            <div class="text-2xl text-center capitalize font-bold text-gray-600 pb-2">nearby property</div>
            <div class="grid grid-rows-flow grid-cols-3 gap-3">
                <% if @property.nearbys.available.present? %>
                    <% @property.nearbys.available.last(3).each do |property| %>
                                <div class="shadow-2xl rounded-lg capitalize text-sm">
                                    <%= link_to property do %>
                                        <div class="h-40 w-full">
                                            <%= image_tag property.property_cover_photo , class: " h-full w-full object-cover object-center" %>
                                        </div>
                                        <div class="p-2 h-24">
                                            <div class="font-bold">
                                            <%= property.name %>
                                                <div class="text-gray-700 text-xs font-medium">
                                                    <%= property.distance.round(2) %> kms<br>
                                                </div>
                                            </div>
                                            <div class="text-gray-700">
                                            <%= property.address %><br>
                                            </div>
                                            <div class="text-teal-700 font-bold whitespace-normal">
                                            <% if property.for_sale? %>
                                                <%= property.price > 0 ? number_to_currency(property.price, unit: "kshs", precision: 0) : "for sale" %>
                                            <% else %>
                                                <%= property.price > 0 ? number_to_currency(property.price, unit: "kshs", precision: 0) : "for sale" %>/month
                                            <% end %>
                                            </div>
                                        </div>
                                    <% end %>
                                </div>
                    <% end %>
                <% end %>
            </div>
        </div>
        <div class="ml-24 py-3 border-t-2">
            <div class="text-2xl text-center capitalize font-bold text-gray-600">other available property by <%= @property.user.company_name %></div>
            <br>
            <%= render 'agent_properties' %>
        </div>
        <div class="px-24">
        </div>
    </div>
    <div class="w-2/5 px-4">
        <div class=" grid justify-items-center" >
            <%= image_tag @property.user.company_logo, class:"w-24 h-24 object-cover object-center justify-self-center" if @property.user.present? %>
            <div class="text-teal-700 text-lg font-bold capitalize my-2"><%= link_to @property.user.company_name, @property.user %></div>
            <a class="text-gray-700 uppercase text-sm border-2 border-black rounded-lg py-1 w-full text-center mx-12" href="tel:#{@property.user.country_code @property.user.phone_number}">click to call </a>
            <div></div>
        </div>    
    </div>    
</div>
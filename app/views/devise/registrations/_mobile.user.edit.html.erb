<div class="bg-gray-200 text-4xl">
  <div class="h-auto px-24 bg-gray-300 border-b">
      <div class="pt-12 pb-6 flex justify-center items-center">
          <%= image_tag @user.company_logo, class:"w-40 h-40 object-cover object-center border-4 border-white" if @user.company_logo.attached? %>
          <div class="">
              <div class="text-teal-700 font-bold capitalize px-6"><%= @user.company_name %></div>
              <div class="text-teal-700 font-bold capitalize px-6"><%= @user.company_phone_number1 %></div>
          </div>
      </div>
  </div>
      <div class="flex items-center">
        <div class="mx-24 text-4xl bg-gray-800 py-1 px-2 font-medium capitalize rounded text-white">
          <%= link_to "Back", :back %>
        </div>
          <h1 class="text-teal-700 py-2 capitalize font-semibold text-4xl">update your account </h1>
      </div>
<div class="text-4xl px-8 py-4 rounded-lg mx-24 my-4 bg-white shadow-2xl">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="px-5">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, autofocus: true, class:"my-2 border mx-5 p-1"%>
  </div>

    <div class="px-5">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name, autofocus: true, class:"my-2 border mx-5 p-1"%>
  </div>

  <div class="px-5">
    <%= f.label :country_code %><br />
    <%= f.text_field :country_code, autofocus: true, class:"my-2 border mx-5 p-1"%>
  </div>

  <div class="px-5">
    <%= f.label :phone_number %><br />
    <%= f.phone_field :phone_number, autofocus: true, class:"my-2 border mx-5 p-1"%>
  </div>

  <div class="px-5">
    <%= f.label :identity_card_front %><br />
    <%= f.file_field :identity_card_front , class:"my-2 border mx-5 p-1"%>
  </div>


  <div class="px-5">
    <%= f.label :identity_card_back %><br />
    <%= f.file_field :identity_card_back , class:"my-2 border mx-5 p-1"%>
  </div>

  <div class="px-5">
    <%= f.label :company_name %><br />
    <%= f.text_field :company_name, autofocus: true, class:"my-2 border mx-5 p-1"%>
  </div>

  <div class="px-5">
    <%= f.label :company_logo %><br />
    <%= f.file_field :company_logo , class:"my-2 border mx-5 p-1"%>
  </div>

  <div class="px-5">
    <%= f.label :business_reg_certificate %><br />
    <%= f.file_field :business_reg_certificate, class:"my-2 border mx-5 p-1" %>
  </div>

  <div class="px-5">
    <%= f.label :company_offices %><br />
    <%= f.text_field :company_offices, autofocus: true, class:"my-2 border mx-5 p-1"%>
  </div>

  <div class="px-5">
    <%= f.label :position_in_company %><br />
    <%= f.text_field :position_in_company, autofocus: true, class:"my-2 border mx-5 p-1"%>
  </div>

  <div class="px-5">
    <%= f.label :company_phone_number1 %><br />
    <%= f.text_field :company_phone_number1, autofocus: true, class:"my-2 border mx-5 p-1"%>
  </div>

  <div class="px-5">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class:"my-2 border mx-5 p-1"%>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="px-5">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="px-5">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"my-2 border mx-5 p-1" %>
  </div>

  <div class="px-5">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class:"my-2 border mx-5 p-1" %>
  </div>

  <div class="px-5 grid justify-items-center mt-6">
    <%= f.submit "update your account", disable_with: 'Submiting...', class:"font-medium text-4xl bg-teal-700 text-white p-2 capitalize rounded-lg" %>
  </div>
<% end %>
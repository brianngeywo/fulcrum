<% obj.each do |furniture| %>
        <div class="w-full py-2 px-2">
            <div class="grid grid-cols-5 bg-white text-sm shadow-xl gap-4">
                <div class="h-24 w-24">
                    <%= image_tag furniture.furniture_cover_photo , class: "h-24 w-24 object-cover object-center" if furniture.furniture_cover_photo.attached? %>
                </div>
                <div class="font-bold place-self-center justify-self-start">
                  <%= furniture.furniture_category.name %><br>
                </div>
                <div class="text-gray-700 place-self-center justify-self-start">
                    <%= furniture.address %><br>
                </div>
                <div class="whitespace-normal place-self-center justify-self-start">
                    <% if furniture.for_sale? %>
                        <%= furniture.price >= 0 ? number_to_currency(furniture.price, unit: "kshs", precision: 0) : "for sale" %>
                    <% else %>                        
                            <%= furniture.price >= 0? number_to_currency(furniture.price, unit: "kshs", precision: 0) : "for display" %>                        
                    <% end %>
                </div>
                <div class=" place-self-center justify-self-start text-blue-700"><%= link_to "view furniture", furniture %></div>
            </div>
        </div>
<% end %>
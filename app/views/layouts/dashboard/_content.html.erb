<% obj.each do |property| %>
        <div class="w-full py-2 px-2">
            <div class="grid grid-cols-5 bg-white border text-sm">
                <div class="h-16 w-16">
                    <%= image_tag property.property_cover_photo , class: "h-16 w-16 object-cover object-center" if property.property_cover_photo.attached? %>
                </div>
                <div class="font-bold">
                  <%= property.name %><br>
                </div>
                <div class="text-gray-700">
                    <%= property.address %><br>
                </div>
                <div class="text-teal-700 font-bold whitespace-normal">
                    <% if property.for_sale? %>
                        <%= property.price >= 0 ? number_to_currency(property.price, unit: "kshs", precision: 0) : "for sale" %>
                    <% else %>                        
                            <%= property.price >= 0? number_to_currency(property.price, unit: "kshs", precision: 0) : "for sale" %>/month                        
                    <% end %>
                </div>
                <div><%= link_to "delete", property, :method => :delete %></div>
            </div>
        </div>
<% end %>
<% obj.each do |property| %>
        <div class="w-full py-2 px-2">
            <div class="grid grid-cols-5 bg-white text-sm shadow-xl gap-4">
                <div class="h-24 w-24">
                    <%= image_tag property.property_cover_photo , class: "h-24 w-24 object-cover object-center" if property.property_cover_photo.attached? %>
                </div>
                <div class="font-bold place-self-center justify-self-start">
                  <%= property.name %><br>
                </div>
                <div class="text-gray-700 place-self-center justify-self-start">
                    <%= property.address %><br>
                </div>
                <div class="whitespace-normal place-self-center justify-self-start">
                    <% if property.for_sale? %>
                        <%= property.price >= 0 ? number_to_currency(property.price, unit: "kshs", precision: 0) : "for sale" %>
                    <% else %>                        
                            <%= property.price >= 0? number_to_currency(property.price, unit: "kshs", precision: 0) : "for sale" %>/month                        
                    <% end %>
                </div>
                <div class=" place-self-center justify-self-start text-blue-700"><%= link_to "view property", property %></div>
            </div>
        </div>
<% end %>